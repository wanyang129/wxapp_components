<view class="custom-text-wrapper">
    <text wx:for="{{renderText}}" wx:for-index="idx" wx:key="idx"
      space="{{space}}"
      decode="{{decode}}"
      class="custom-text" 
      id="text-{{idx}}"
      data-index="{{idx}}" 
      data-text="{{item}}"
      data-id="{{idx}}"
      style="font-size:{{fontSize}}">{{item}}</text>
  </view>